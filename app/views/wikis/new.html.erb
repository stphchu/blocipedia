 <h1>New Wiki</h1>

 <div class="row">

   <div class="col-md-4">
     <p>Guidelines:</p>
     <ul>
       <li>1</li>
       <li>2</li>
       <li>3</li>
     </ul>
   </div>

   <div class="col-md-8">
     <%= form_for @wiki do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter title" %>
       </div>
       <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki content" %>
       </div>

       <% if current_user.role == 'premium' %>
         <div class="form-group">
           <%= f.label :private, class: 'checkbox' do %>
             <%= f.check_box :private %> Private wiki
           <% end %>
         </div>
       <% end %>
       <%= f.submit "Save", class: 'btn btn-success' %>
     <% end %>
   </div>
 </div>
