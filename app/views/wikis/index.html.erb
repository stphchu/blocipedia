 <h1>Index of Wiki Pages</h1>
 
<br>
 <div class="row">
   <div class="col-md-8">
      <% @wikis.each do |wiki| %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">
             <%= link_to wiki.title, wiki %>
           </h4>
            <small>
              updated <%= time_ago_in_words(wiki.updated_at) %> ago
            </small>          
         </div>
       </div>
     <% end %>
   </div>


 <% if user_signed_in? %>
   <div class="col-md-4">
      <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
   </div>
 <% end %>
</div>
